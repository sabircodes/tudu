<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>to-do</title>
    <link rel="stylesheet" href="css/styles.css" type="" />
  </head>
  <body>
    <div class="bt">
      <button><a href="/work">Work</a></button>
    </div>
    <div class="bt">
      <button><a href="/">Home</a></button>
    </div>

    <div class="box" id="heading">
      <h1><%=listmode %></h1>
    </div>

    <div class="box">
      <!-- <li><%= newlistitems %></li> -->
      <% for(var i = 0 ; i < newlistitems.length ; i++){ %>
      <form action="/delete" method="post">
        <div class="item" >
          <input type="checkbox" onChange="this.form.submit()" name="chbox" value="<%=newlistitems[i]._id%>" />
          <p><%= newlistitems[i].name %></p>
        </div>
      </form>

      <% } %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newitem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="list" >+</button>
      </form>
    </div>
  </body>
</html>
